@model CarViewModel
<h2>It Works!!</h2>
@if (Model.Cars.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Mærke</th>
                <th>Model</th>
                <th>Årgang</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model.Cars)
            {
                <tr>
                    <td>@car.Make</td>
                    <td>@car.Model</td>
                    <td>@car.Year</td>
                    <td><button class="btn btn-danger" onclick="location.href='@Url.Action("Delete", "Car", new { make = car.Make, model = car.Model, year = car.Year })'">Delete</button></td>
                </tr>
            }
        </tbody>
    </table>
}
<button class="btn btn-default" onclick="location.href='@Url.Action("Create", "Car")'">Create</button>