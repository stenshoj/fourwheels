@model FourWheel.Web.Models.RegisteredCar

<h2>View</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>RegisteredCar</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Registration" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Registration" class="form-control" disabled="disabled" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Car.Make" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Car.Make" class="form-control" />
                <span asp-validation-for="Car.Make" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Car.Model" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Car.Model" class="form-control" />
                <span asp-validation-for="Car.Model" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Car.Year" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Car.Year" class="form-control" />
                <span asp-validation-for="Car.Year" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
